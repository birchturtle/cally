package main

import (
    "flag"
    "fmt"
    
    _ "github.com/mattn/go-sqlite3"
)

func main() {
    var action [2]string
    
    flag.StringVar(&action[0], "n", "", "Add flag for action, e.g. -n for new")
    flag.StringVar(&action[0], "d", "", "Add flag for action, e.g. -n for new")
    flag.Parse()
    
    var config Configuration
    config = Configure()
    db := config.databaseURI
    
    createDb(db)
    
    if action[0] == "" {
        panic("something wrong..")
    }
    
    fmt.Println("Great!", action[1]) // den skriver ikke action[1] ud umiddelbart, fix det
    
}
